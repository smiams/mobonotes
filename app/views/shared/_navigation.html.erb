<ul class="navigation">
	<li class="<%= @current_tab == "all-notes" ? "active" : "" %>">
		<%= link_to "All Notes", notes_path, :class => "tab" %>
	</li>
	<% @labels.each do |label| %>
		<li class="<%= @current_tab == label.name ? "active" : "" %>">
			<%= link_to label.name, notes_label_path(label), :class => "tab" %>
		</li>
	<% end %>
</ul>
<div style="clear:both;"></div>