<div id="task-<%= task.id %>" class="task-container">
  <div class="hidden-hover-pad">
  </div>
  <label class="<%= task.complete? ? 'complete' : 'incomplete' %>">
    <%= check_box_tag "checkbox_for_task_#{task.id.to_s}", "1", 
                      task.complete?,
                      :class => "task checkbox",
                      :onclick => remote_function(:url => task.complete? ? uncomplete_task_path(task) : complete_task_path(task), :method => :put) %>
    <%= task.name %>
  </label>
  <div class="task-details">
    <h1 id="task-<%= task.id %>-header">
      <%= task.name %>
      <div class="links">
        <%= link_to "edit", edit_task_path(task), :remote => true %>
        <%= link_to "delete", task_path(task), :class => "delete", :method => :delete, :confirm => "Are you sure?" %>
        <a href="#" class="move"></a>
      </div>
    </h1>
    <ol id="task-<%= task.id %>-notes" class="notes">
      <% task.notes.each do |note| %>
        <%= render :partial => "tasks/notes/note_list_item", :locals => {:task => task, :note => note} %>
      <% end %>
    </ol>

    <div class="note-form-container">
      <%= form_for Note.new, :url => task_notes_path(task), :as => :note, :method => :post, :remote => true do |f| %>
        <div class="text-field-container">
          <%= f.text_field :content, :class => "text-field" %>
        </div>
        <div class="button-container">
          <%= f.submit "Add", :class => "submit" %>
          <div style="clear:both;"></div>
        </div>
      <% end %>
    </div>    
  </div>
</div>