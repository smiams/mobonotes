%div.task-container
  %div.task-list-container
    %div.label
      bitsimplicity
    %div.links
    %ol.tasks
      - tasks.each_with_index do |task, index|
        = render :partial => "tasks/list_item", :locals => {:task => task, :index => index}
    = render :partial => "tasks/new_form", :locals => {:labels => @labels}