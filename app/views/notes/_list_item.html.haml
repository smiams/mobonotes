%li.note{"data-view-class" => "App.Views.Note"}
  .note-container
    .header
      .timestamp
        = note.created_at.strftime("%d %b")
        %span.time
          = note.created_at.strftime("(%l:%M%P)").gsub(/\s/, '')
      .links
        %a.first edit
        %a.last delete
    .content
      = RedCloth.new(note.content).to_html.html_safe
    .clearfix
      clearfix
    .footer
      / .related-items
      /   %h3
      /     Related items...
      /   - if note.task
      /     %label
      /       %input{:type => "checkbox", :class => "checkbox"}
      /         = note.task.name
      .bottom-border
    .clearfix
      clearfix